<Window
    x:Class="App_3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:App_3.Views"
    Title="App3">

    <NavigationView x:Name="NavView"
                    PaneDisplayMode="Left"
                    SelectionChanged="NavView_SelectionChanged">

        <NavigationView.MenuItems>

            <NavigationViewItem Content="Home" Tag="Home">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Home"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Parties" Tag="Parties">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Contact"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Items" Tag="ItemsManagement">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="List"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Quotes" Tag="Quotes">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Document"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Invoice / Billing" Tag="Invoice">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Calculator"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Payment Links" Tag="PaymentLinks">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Link"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Payments Received" Tag="PaymentsReceived">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Shop"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Recurring Invoices" Tag="RecurringInvoices">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="RepeatAll"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

        </NavigationView.MenuItems>

        <NavigationView.Content>
            <Frame x:Name="ContentFrame"/>
        </NavigationView.Content>

    </NavigationView>
</Window>
