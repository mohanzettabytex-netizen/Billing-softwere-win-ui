<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.PaymentLinksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="using:App_3.Models"
    xmlns:local="using:App_3.Converters">

    <Page.Resources>
        <!-- Converters for Status color and empty state -->
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <local:StatusToForegroundConverter x:Key="StatusToForegroundConverter"/>
        <local:EmptyStateVisibilityConverter x:Key="EmptyStateVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="#F3F4F6">

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer>
            <StackPanel Padding="24" Spacing="24">

                <!-- ================= HEADER ================= -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Payment Links"
                                   FontSize="30"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Create and manage payment links"
                                   FontSize="13"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <Button x:Name="BtnCreatePaymentLink"
                            Grid.Column="1"
                            Content="+ Create Payment Link"
                            Height="42"
                            Padding="22,0"
                            Background="#2563EB"
                            Foreground="White"
                            CornerRadius="10"/>
                </Grid>

                <!-- ================= SUMMARY CARDS ================= -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="16" Padding="20">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Collected" Foreground="#64748B"/>
                            <TextBlock Text="₹ 12,500"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#15803D"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Background="White"
                            CornerRadius="16"
                            Padding="20">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Pending" Foreground="#64748B"/>
                            <TextBlock Text="₹ 6,300"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#B45309"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2"
                            Background="White"
                            CornerRadius="16"
                            Padding="20">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Expired" Foreground="#64748B"/>
                            <TextBlock Text="2 Links"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#B91C1C"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ================= SEARCH + FILTER ================= -->
                <Border Background="White"
        CornerRadius="16"
        Padding="16">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>

                        <!-- SEARCH -->
                        <Grid Width="260">
                            <TextBox x:Name="SearchBox"
              PlaceholderText="Search Customer name"
              Padding="36,8,10,8"
              CornerRadius="8"/>
                            <SymbolIcon Symbol="Find"
                 Foreground="#64748B"
                 Width="16"
                 Height="16"
                 Margin="12,0,0,0"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 IsHitTestVisible="False"/>
                        </Grid>


                        <ComboBox Grid.Column="1"
                  Height="40"
                  PlaceholderText="Status"
                  x:Name="CmbStatus">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Paid"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Expired"/>
                        </ComboBox>

                        <!-- Optional: Payment Method filter -->
                        <ComboBox Grid.Column="2"
                  Height="40"
                  PlaceholderText="Payment Method"
                  x:Name="CmbPaymentMethod">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="UPI"/>
                            <ComboBoxItem Content="Card"/>
                            <ComboBoxItem Content="Bank Transfer"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- ================= PAYMENT LINKS TABLE (Responsive) ================= -->
                <Border Background="White"
        CornerRadius="16"
        Padding="20">
                    <StackPanel Spacing="12">

                        <TextBlock Text="Payment Links"
                   FontSize="16"
                   FontWeight="SemiBold"/>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- TABLE HEADER -->
                                <Grid Background="#F3F4F6"
                      Padding="10"
                      ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <!-- Customer -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Amount -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Status -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Expiry -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Payment Method -->
                                        <ColumnDefinition Width="2*"/>
                                        <!-- Actions -->
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Customer" FontWeight="Bold"/>
                                    <TextBlock Text="Amount" Grid.Column="1" FontWeight="Bold"/>
                                    <TextBlock Text="Status" Grid.Column="2" FontWeight="Bold"/>
                                    <TextBlock Text="Expiry" Grid.Column="3" FontWeight="Bold"/>
                                    <TextBlock Text="Method" Grid.Column="4" FontWeight="Bold"/>
                                    <TextBlock Text="Actions" Grid.Column="5" FontWeight="Bold"/>
                                </Grid>

                                <!-- DYNAMIC ROWS -->
                                <ItemsControl ItemsSource="{x:Bind PaymentLinks, Mode=OneWay}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="Models:PaymentLinkModel">
                                            <Grid Padding="10" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{x:Bind CustomerName}" 
                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{x:Bind AmountFormatted}" Grid.Column="1"
                                           HorizontalAlignment="Right"/>

                                                <Border Grid.Column="2"
                                        Background="{x:Bind Status, Converter={StaticResource StatusToColorConverter}}"
                                        CornerRadius="12"
                                        Padding="4,2"
                                        HorizontalAlignment="Center">
                                                    <TextBlock Text="{x:Bind Status}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{x:Bind Status, Converter={StaticResource StatusToForegroundConverter}}"
                                               HorizontalAlignment="Center"/>
                                                </Border>

                                                <TextBlock Text="{x:Bind ExpiryFormatted}" Grid.Column="3"
                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{x:Bind PaymentMethod}" Grid.Column="4"
                                           HorizontalAlignment="Center"/>

                                                <!-- ACTION BUTTONS -->
                                                <StackPanel Grid.Column="5"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            HorizontalAlignment="Right">
                                                    <Button Content="Share" Height="32" MinWidth="60"/>
                                                    <Button Content="Edit" Height="32" MinWidth="60"/>
                                                    <Button Content="Delete" Height="32" MinWidth="60"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- EMPTY STATE -->
                                <StackPanel Padding="32"
                            HorizontalAlignment="Center"
                            Spacing="8"
                            Visibility="{x:Bind PaymentLinks.Count, Converter={StaticResource EmptyStateVisibilityConverter}}">
                                    <TextBlock Text="No more payment links"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Click 'Create Payment Link' to add new"
                               FontSize="13"
                               Foreground="#64748B"
                               HorizontalAlignment="Center"/>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ================= MODAL + BACKGROUND BLUR ================= -->
        <Grid x:Name="ModalBackground"
              Background="#80000000"
              Visibility="Collapsed">

            <Border Background="White"
                    Width="420"
                    CornerRadius="16"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel Spacing="16">

                    <TextBlock Text="Create Payment Link"
                               FontSize="18"
                               FontWeight="Bold"/>

                    <TextBox PlaceholderText="Amount" Height="40"/>
                    <ComboBox PlaceholderText="Select Customer" Height="40"/>
                    <TextBox PlaceholderText="Description" Height="40"/>
                    <DatePicker/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button x:Name="BtnCancelModal" Content="Cancel"/>
                        <Button Content="Generate Link"
                                Background="#16A34A"
                                Foreground="White"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
