<Page
    x:Class="App_3.Views.PaymentLinksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="using:App_3.Models"
    xmlns:local="using:App_3.Converters">

    <Page.Resources>
        <local:StatusToColorConverter x:Key="StatusBg"/>
        <local:StatusToForegroundConverter x:Key="StatusFg"/>
        <local:EmptyStateVisibilityConverter x:Key="ZeroCountToVisibilityConverter"/>
        <local:GreaterThanZeroVisibilityConverter x:Key="GreaterThanZeroVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="#F3F4F6">

        <!-- ================= MAIN SCROLLVIEWER ================= -->
        <ScrollViewer>
            <StackPanel Padding="24" Spacing="24">

                <!-- HEADER -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Payment Links"
                                   FontSize="28"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Create &amp; manage payment links"
                                   FontSize="13"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <Button x:Name="BtnCreatePaymentLink"
                            Content="+ Create Payment Link"
                            Click="BtnCreatePaymentLink_Click"
                            Height="40"
                            Padding="20,0"
                            CornerRadius="10"
                            Background="#2563EB"
                            Foreground="White"
                            Grid.Column="1"/>
                </Grid>

                <!-- SUMMARY CARDS -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="16" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Collected" Foreground="#64748B"/>
                            <TextBlock Text="â‚¹12,500" FontSize="22" FontWeight="Bold" Foreground="#15803D"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Pending" Foreground="#64748B"/>
                            <TextBlock Text="â‚¹6,300" FontSize="22" FontWeight="Bold" Foreground="#B45309"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Expired" Foreground="#64748B"/>
                            <TextBlock Text="2 Links" FontSize="22" FontWeight="Bold" Foreground="#B91C1C"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Search + Filters -->
                <Grid ColumnSpacing="12" RowSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <TextBox x:Name="TxtSearch"
             PlaceholderText="Search customer name"
             Height="40"
             Padding="36,0,12,0"
             CornerRadius="8"/>
                        <TextBlock Text="ðŸ”"
           FontSize="16"
           Margin="12,0,0,0"
           VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Status Filter -->
                    <ComboBox x:Name="CmbStatusFilter"
              Grid.Column="1"
              Height="40"
              CornerRadius="8"
              PlaceholderText="Status">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Paid"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Expired"/>
                    </ComboBox>

                    <!-- Payment Method Filter -->
                    <ComboBox x:Name="CmbMethodFilter"
              Grid.Column="2"
              Height="40"
              CornerRadius="8"
              PlaceholderText="Method">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="UPI"/>
                        <ComboBoxItem Content="Card"/>
                        <ComboBoxItem Content="Bank Transfer"/>
                    </ComboBox>
                </Grid>


                <!-- PAYMENT LINKS TABLE -->
                <Border Background="White" CornerRadius="16" Padding="16">
                    <StackPanel Spacing="12">

                        <TextBlock Text="Payment Links List"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <!-- EMPTY STATE -->
                        <StackPanel x:Name="EmptyStatePanel"
                                    Visibility="{x:Bind PaymentLinks.Count, Converter={StaticResource ZeroCountToVisibilityConverter}}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="40"
                                    Spacing="12">
                            <SymbolIcon Symbol="Link" Width="48" Height="48"/>
                            <TextBlock Text="No payment links yet"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Create a payment link to start collecting payments"
                                       FontSize="13"
                                       Foreground="#64748B"
                                       TextAlignment="Center"/>
                            <Button Content="+ Create Payment Link"
                                    Padding="18,6"
                                    Background="#2563EB"
                                    Foreground="White"
                                    CornerRadius="10"
                                    Click="BtnCreatePaymentLink_Click"/>
                        </StackPanel>

                        <!-- TABLE HEADER -->
                        <Grid Background="#F1F5F9"
                              Padding="12"
                              Visibility="{x:Bind PaymentLinks.Count, Converter={StaticResource GreaterThanZeroVisibilityConverter}}"
                              CornerRadius="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Customer" FontWeight="Bold"/>
                            <TextBlock Text="Amount" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold"/>
                            <TextBlock Text="Status" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Expiry" Grid.Column="3" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Method" Grid.Column="4" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Actions" Grid.Column="5" FontWeight="Bold"/>
                        </Grid>

                        <!-- TABLE ROWS -->
                        <ItemsControl ItemsSource="{x:Bind PaymentLinks}"
                                      Visibility="{x:Bind PaymentLinks.Count, Converter={StaticResource GreaterThanZeroVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="Models:PaymentLinkModel">
                                    <Border x:Name="RowRoot"
                                            Padding="10"
                                            BorderThickness="0,0,0,1"
                                            BorderBrush="#E5E7EB"
                                            Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames
                                                            Storyboard.TargetName="RowRoot"
                                                            Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame Value="#F8FAFC"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Bind CustomerName}" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind AmountFormatted}" HorizontalAlignment="Right" FontWeight="Bold"/>

                                            <Border Grid.Column="2"
                                                    Padding="6,2"
                                                    CornerRadius="12"
                                                    HorizontalAlignment="Center"
                                                    Background="{x:Bind Status, Converter={StaticResource StatusBg}}">
                                                <TextBlock Text="{x:Bind Status}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{x:Bind Status, Converter={StaticResource StatusFg}}"/>
                                            </Border>

                                            <TextBlock Grid.Column="3" Text="{x:Bind ExpiryFormatted}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{x:Bind PaymentMethod}" HorizontalAlignment="Center"/>

                                            <!-- ACTION BUTTONS -->
                                            <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                <!-- Share -->
                                                <Button Width="32" Height="32" Padding="0" FontSize="16" FontFamily="Segoe UI Emoji" Content="ðŸ”—" Background="#E5E7EB" CornerRadius="8"/>

                                                <!-- Edit -->
                                                <Button Width="32" Height="32" Padding="0" FontSize="16" FontFamily="Segoe UI Emoji" Content="âœï¸" Background="#E5E7EB" CornerRadius="8"/>

                                                <!-- Delete -->
                                                <Button Width="32" Height="32" Padding="0" FontSize="16" FontFamily="Segoe UI Emoji" Content="ðŸ—‘ï¸" Background="#FEE2E2" CornerRadius="8"/>
                                            </StackPanel>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ================= PAYMENT LINK MODAL ================= -->
        <Grid x:Name="ModalBackground" Visibility="Collapsed" Background="#80000000">
            <Border Width="460" Background="White" CornerRadius="16" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">

                        <TextBlock Text="Create Payment Link" FontSize="18" FontWeight="Bold"/>

                        <!-- CUSTOMER NAME -->
                        <StackPanel>
                            <TextBlock Text="Customer Name *" Foreground="Red" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtCustomerName" Height="40" CornerRadius="8" PlaceholderText="Enter customer name"/>
                        </StackPanel>

                        <!-- AMOUNT -->
                        <StackPanel>
                            <TextBlock Text="Amount *" Foreground="Red" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtAmount" Height="40" CornerRadius="8" PlaceholderText="Enter amount"/>
                        </StackPanel>

                        <!-- PAYMENT METHOD -->
                        <StackPanel>
                            <TextBlock Text="Payment Method *" Foreground="Red" FontSize="12" Margin="0,0,0,4"/>
                            <ComboBox x:Name="CmbPaymentMethod" Height="40" PlaceholderText="Select payment method">
                                <ComboBoxItem Content="UPI"/>
                                <ComboBoxItem Content="Card"/>
                                <ComboBoxItem Content="Bank Transfer"/>
                                <ComboBoxItem Content="Cash"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- EXPIRY DATE -->
                        <StackPanel>
                            <TextBlock Text="Expiry Date *" Foreground="Red" FontSize="12" Margin="0,0,0,4"/>
                            <CalendarDatePicker x:Name="DpExpiryDate" Height="40"/>
                        </StackPanel>

                        <!-- STATUS -->
                        <StackPanel>
                            <TextBlock Text="Status" Foreground="#64748B" FontSize="12" Margin="0,0,0,4"/>
                            <ComboBox x:Name="CmbPaymentStatus" Height="40">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Paid"/>
                                <ComboBoxItem Content="Expired"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- DESCRIPTION -->
                        <StackPanel>
                            <TextBlock Text="Description" Foreground="#64748B" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtDescription" Height="70" AcceptsReturn="True" TextWrapping="Wrap" CornerRadius="8" PlaceholderText="Optional notes for this payment link"/>
                        </StackPanel>

                        <!-- ACTION BUTTONS -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,16,0,0">
                            <Button x:Name="BtnCancelModal" Content="Cancel" Width="100" Click="BtnCancelModal_Click"/>
                            <Button x:Name="BtnGenerateLink" Content="Generate" Width="140" Background="#2563EB" Foreground="White" Click="BtnGenerateLink_Click"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</Page>
