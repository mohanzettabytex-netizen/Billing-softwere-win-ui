<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.RecurringInvoicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_3.Views"
    xmlns:models="using:App_3.Models">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="15">

            <TextBlock Text="Recurring Invoices" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Top: Add Invoice -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <ComboBox x:Name="CustomerBox" Width="150" Header="Customer"/>
                <TextBox x:Name="AmountBox" Width="100" Header="Amount"/>
                <ComboBox x:Name="FrequencyBox" Width="120" Header="Frequency">
                    <ComboBoxItem Content="Daily"/>
                    <ComboBoxItem Content="Weekly"/>
                    <ComboBoxItem Content="Monthly"/>
                    <ComboBoxItem Content="Yearly"/>
                </ComboBox>
                <DatePicker x:Name="StartDatePicker" Header="Start Date"/>
                <DatePicker x:Name="EndDatePicker" Header="End Date"/>
                <TextBox x:Name="NotesBox" Width="150" Header="Notes"/>
                <Button Content="Add" Click="AddInvoice_Click"/>
                <Button Content="Clear" Click="ClearInputs_Click"/>
            </StackPanel>

            <!-- Middle: Search + Filters -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="SearchBox" PlaceholderText="Search by Customer..." Width="200"
                         TextChanged="SearchBox_TextChanged"/>
                <DatePicker x:Name="StartFilter" Header="Start After" DateChanged="Filter_Changed"/>
                <DatePicker x:Name="EndFilter" Header="End Before" DateChanged="Filter_Changed"/>
            </StackPanel>

            <!-- Bottom: ListView of Invoices -->
            <ListView x:Name="InvoicesListView" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:RecurringInvoice">
                        <StackPanel Orientation="Horizontal" Spacing="10" Padding="5">
                            <TextBlock Width="120" Text="{x:Bind Customer}"/>
                            <TextBlock Width="80" Text="{x:Bind Amount}"/>
                            <TextBlock Width="100" Text="{x:Bind Frequency}"/>
                            <TextBlock Width="100" Text="{x:Bind StartDateFormatted}"/>
                            <TextBlock Width="100" Text="{x:Bind EndDateFormatted}"/>
                            <TextBlock Width="150" Text="{x:Bind Notes}"/>
                            <Button Content="Edit" Tag="{x:Bind}" Click="EditInvoice_Click"/>
                            <Button Content="Delete" Tag="{x:Bind}" Click="DeleteInvoice_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>






