<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:App_3.Models"
    Background="#F3F4F6">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">

            <!-- HEADER -->
            <Grid>
                <TextBlock Text="Reports"
                           FontSize="32"
                           FontWeight="Bold"/>

                <ComboBox Width="200"
                          HorizontalAlignment="Right"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Today"/>
                    <ComboBoxItem Content="This Month"/>
                    <ComboBoxItem Content="Last Month"/>
                    <ComboBoxItem Content="Custom Range"/>
                </ComboBox>
            </Grid>

            <!-- SUMMARY CARDS -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- TOTAL SALES -->
                <Border Background="White"
                        CornerRadius="16"
                        Padding="20">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Total Sales"
                                   Foreground="#64748B"/>
                        <TextBlock Text="₹ 1,25,000"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#15803D"/>
                    </StackPanel>
                </Border>

                <!-- TOTAL EXPENSE -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="16"
                        Padding="20">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Total Expenses"
                                   Foreground="#64748B"/>
                        <TextBlock Text="₹ 42,000"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#DC2626"/>
                    </StackPanel>
                </Border>

                <!-- NET PROFIT -->
                <Border Grid.Column="2"
                        Background="White"
                        CornerRadius="16"
                        Padding="20">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Net Profit"
                                   Foreground="#64748B"/>
                        <TextBlock Text="₹ 83,000"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#2563EB"/>
                    </StackPanel>
                </Border>

                <!-- PENDING -->
                <Border Grid.Column="3"
                        Background="White"
                        CornerRadius="16"
                        Padding="20">
                    <StackPanel Spacing="6">
                        <TextBlock Text="Pending Amount"
                                   Foreground="#64748B"/>
                        <TextBlock Text="₹ 18,500"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- REPORT SECTIONS -->

            <!-- SALES REPORTS -->
            <StackPanel Spacing="12">
                <TextBlock Text="Sales Reports"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Border Background="White"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="• Sales Summary"/>
                        <TextBlock Text="• Sales by Customer"/>
                        <TextBlock Text="• Sales by Item"/>
                        <TextBlock Text="• Sales by Date"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- EXPENSE REPORTS -->
            <StackPanel Spacing="12">
                <TextBlock Text="Expense Reports"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Border Background="White"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="• Expense Summary"/>
                        <TextBlock Text="• Expense by Category"/>
                        <TextBlock Text="• Expense by Vendor"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- PROFIT & LOSS -->
            <StackPanel Spacing="12">
                <TextBlock Text="Profit &amp; Loss"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Border Background="White"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="• Profit &amp; Loss Statement"/>
                        <TextBlock Text="• Monthly Profit Trend"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- PARTY REPORTS -->
            <StackPanel Spacing="12">
                <TextBlock Text="Party Reports"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Border Background="White"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="• Customer Statement"/>
                        <TextBlock Text="• Supplier Statement"/>
                        <TextBlock Text="• Outstanding Balances"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
