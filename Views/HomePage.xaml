<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:App_3.Models"
    Background="#F3F4F6">


    <!-- ================= RESOURCES ================= -->
    <Page.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Shadow">
                <Setter.Value>
                    <ThemeShadow/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelTxt" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ValueTxt" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <Style x:Key="TrendTxt" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background" Value="#4C6FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <Style x:Key="GreenBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#10B981"/>
        </Style>

        <Style x:Key="RedBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#EF4444"/>
        </Style>
    </Page.Resources>

    <!-- ================= BODY ================= -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Dashboard" FontSize="30" FontWeight="Bold"/>
                    <TextBlock Text="Business Overview" Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="1">
                    <Button Content="Create Invoice" Style="{StaticResource PrimaryBtn}"/>
                    <Button Content="Add Customer" Style="{StaticResource GreenBtn}"/>
                </StackPanel>
            </Grid>

            <!-- METRIC CARDS -->
            <ItemsControl Grid.Row="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Items>
                    <!-- Customers -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Total Customers" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="CustomersCount" Style="{StaticResource ValueTxt}"/>
                            <TextBlock Text="â†‘ 10% from last month" Foreground="#10B981" Style="{StaticResource TrendTxt}"/>
                        </StackPanel>
                    </Border>

                    <!-- Suppliers -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Total Suppliers" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="SuppliersCount" Style="{StaticResource ValueTxt}"/>
                            <TextBlock Text="â†‘ 5% from last month" Foreground="#10B981" Style="{StaticResource TrendTxt}"/>
                        </StackPanel>
                    </Border>

                    <!-- Sales -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Today's Sales" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodaySalesAmount" Style="{StaticResource ValueTxt}"/>
                            <TextBlock Text="â†‘ 8% from yesterday" Foreground="#10B981" Style="{StaticResource TrendTxt}"/>
                        </StackPanel>
                    </Border>

                    <!-- Expenses -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Today's Expenses" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodayExpenses" Style="{StaticResource ValueTxt}" Foreground="#EF4444"/>
                            <TextBlock Text="â†“ 2% from yesterday" Foreground="#EF4444" Style="{StaticResource TrendTxt}"/>
                        </StackPanel>
                    </Border>

                    <!-- Profit -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Today's Profit" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodayProfit" Style="{StaticResource ValueTxt}" Foreground="#10B981"/>
                            <TextBlock Text="â†‘ 12% from yesterday" Foreground="#10B981" Style="{StaticResource TrendTxt}"/>
                        </StackPanel>
                    </Border>
                </ItemsControl.Items>
            </ItemsControl>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT -->
                <StackPanel Spacing="20">
                    <!-- SALES CHART -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Sales (Last 7 Days)" FontSize="20" FontWeight="SemiBold"/>
                            <Rectangle Height="220" Fill="#E5E7EB" RadiusX="8" RadiusY="8" Margin="0,12,0,0"/>
                            <TextBlock Text="Interactive chart placeholder" Foreground="#9CA3AF"
                                       HorizontalAlignment="Center" Margin="0,-120,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- TOP SELLING ITEMS -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Top Selling Items" FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="Based on quantity sold" Foreground="#6B7280" Margin="0,0,0,10"/>

                            <ListView x:Name="TopSellingItemsList" Height="200" CornerRadius="8">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:TopItemModel">
                                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,4">
                                            <TextBlock Text="{x:Bind ItemName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind QuantitySold}" Grid.Column="1" Margin="10,0"/>
                                            <TextBlock Text="{x:Bind RevenueFormatted}" Grid.Column="2" Margin="10,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>


                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- RIGHT -->
                <StackPanel Grid.Column="1" Spacing="20">
                    <!-- QUICK ACTIONS -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold"/>
                            <Button Content="ðŸ“„ Create Invoice" Style="{StaticResource PrimaryBtn}"/>
                            <Button Content="ðŸ’° Record Payment" Style="{StaticResource GreenBtn}"/>
                            <Button Content="ðŸ“ Add Expense" Style="{StaticResource RedBtn}"/>
                        </StackPanel>
                    </Border>

                    <!-- ALERTS -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Alerts" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ListView x:Name="AlertsList" Height="200" CornerRadius="8">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:AlertModel">
                                        <StackPanel Spacing="2" Padding="6" Background="{x:Bind AlertColor}" CornerRadius="6">
                                            <TextBlock Text="{x:Bind Type}" FontWeight="Bold"/>
                                            <TextBlock Text="{x:Bind Message}"/>
                                            <TextBlock Text="{x:Bind Timestamp}" FontSize="12" Foreground="#6B7280"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

