<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F3F4F6">

    <!-- ================= RESOURCES ================= -->
    <Page.Resources>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style x:Key="LabelTxt" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ValueTxt" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background" Value="#4C6FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <Style x:Key="GreenBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#10B981"/>
        </Style>

        <Style x:Key="RedBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#EF4444"/>
        </Style>

    </Page.Resources>

    <!-- ================= BODY ================= -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24" RowSpacing="24">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= HEADER ================= -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Dashboard" FontSize="30" FontWeight="Bold"/>
                    <TextBlock Text="Business Overview" Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="1">
                    <Button Content="Create Invoice" Style="{StaticResource PrimaryBtn}"/>
                    <Button Content="Add Customer" Style="{StaticResource GreenBtn}"/>
                </StackPanel>
            </Grid>

            <!-- ================= METRIC CARDS (RESPONSIVE) ================= -->
            <ItemsControl Grid.Row="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"
                                       MaximumRowsOrColumns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Items>

                    <Border Style="{StaticResource Card}"
                            ToolTipService.ToolTip="Customers increased by 10% this month">
                        <StackPanel>
                            <TextBlock Text="Total Customers" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="CustomersCount" Text="128" Style="{StaticResource ValueTxt}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}"
                            ToolTipService.ToolTip="Suppliers growth: +5%">
                        <StackPanel>
                            <TextBlock Text="Total Suppliers" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="SuppliersCount" Text="52" Style="{StaticResource ValueTxt}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}"
                            ToolTipService.ToolTip="Sales done today">
                        <StackPanel>
                            <TextBlock Text="Today's Sales" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodaySalesAmount" Text="₹12,450" Style="{StaticResource ValueTxt}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}"
                            ToolTipService.ToolTip="Expenses recorded today">
                        <StackPanel>
                            <TextBlock Text="Today's Expenses" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodayExpenses" Text="₹4,300" Style="{StaticResource ValueTxt}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}"
                            ToolTipService.ToolTip="Net profit">
                        <StackPanel>
                            <TextBlock Text="Today's Profit" Style="{StaticResource LabelTxt}"/>
                            <TextBlock x:Name="TodayProfit" Text="₹8,150" Style="{StaticResource ValueTxt}"/>
                        </StackPanel>
                    </Border>

                </ItemsControl.Items>
            </ItemsControl>

            <!-- ================= MAIN CONTENT ================= -->
            <Grid Grid.Row="2" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT -->
                <StackPanel Spacing="20">

                    <!-- SALES -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Sales (Last 7 Days)" FontSize="20" FontWeight="SemiBold"/>
                            <Rectangle Height="220"
                                       Fill="#E5E7EB"
                                       RadiusX="8"
                                       RadiusY="8"
                                       Margin="0,12,0,0"/>
                            <TextBlock Text="Sales chart placeholder"
                                       Foreground="#9CA3AF"
                                       HorizontalAlignment="Center"
                                       Margin="0,-120,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- TOP SELLING -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Top Selling Items" FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="Based on quantity sold"
                                       Foreground="#6B7280"
                                       Margin="0,0,0,10"/>

                            <Grid>
                                <ListView x:Name="TopSellingItemsList"
                                          Height="200"
                                          CornerRadius="8"/>

                                <!-- Empty State -->
                                <TextBlock Text="No sales data available"
                                           Foreground="#9CA3AF"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- RIGHT -->
                <StackPanel Grid.Column="1" Spacing="20">

                    <!-- QUICK ACTIONS -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold"/>
                            <Button Content="Create Invoice" Style="{StaticResource PrimaryBtn}"/>
                            <Button Content="Record Payment" Style="{StaticResource GreenBtn}"/>
                            <Button Content="Add Expense" Style="{StaticResource RedBtn}"/>
                        </StackPanel>
                    </Border>

                    <!-- ALERTS -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Alerts"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Grid>
                                <ListView x:Name="AlertsList"
                                          Height="200"
                                          CornerRadius="8">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="{Binding Type}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Message}"/>
                                                <TextBlock Text="{Binding Timestamp}"
                                                           FontSize="12"
                                                           Foreground="#6B7280"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Empty State -->
                                <TextBlock Text="No alerts available"
                                           Foreground="#9CA3AF"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>
