<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App3.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold"/>
                <TextBlock x:Name="DateTimeText" FontSize="16" Foreground="Gray" VerticalAlignment="Bottom"/>
            </StackPanel>

            <!-- Search / Filter -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="SearchBox" PlaceholderText="Search items/customers/orders..." Width="300"/>
                <ComboBox x:Name="StatusFilter" Width="150">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                    <ComboBoxItem Content="Expired"/>
                </ComboBox>
            </StackPanel>

            <!-- Dashboard Cards -->
            <ItemsControl x:Name="DashboardCards" Margin="0,10,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:DashboardCard">
                        <Border Background="#2D2D2D" CornerRadius="12" Padding="20" Width="200">
                            <StackPanel>
                                <TextBlock Text="{x:Bind Title}" Foreground="White"/>
                                <TextBlock Text="{x:Bind Value}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{x:Bind Status}" Foreground="LightGreen" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Chart Area -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Height="250">
                <TextBlock Text="Sales Chart Coming Soon..." 
                           Foreground="Gray" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Recent Transactions -->
            <Border Background="#2D2D2D" CornerRadius="12" Padding="10">
                <StackPanel>
                    <TextBlock Text="Recent Transactions" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                    <ListView x:Name="TransactionsList" Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Transaction">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <TextBlock Text="{x:Bind InvoiceNumber}" Foreground="White" Width="100"/>
                                    <TextBlock Text="{x:Bind CustomerName}" Foreground="White" Width="150"/>
                                    <TextBlock Text="{x:Bind Amount}" Foreground="White" Width="100"/>
                                    <TextBlock Text="{x:Bind Date}" Foreground="White" Width="120"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>


