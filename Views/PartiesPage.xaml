<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.PartiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:App_3.Models"
    Background="#F5F7FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Metrics + Toggle + Search -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Parties" FontSize="26" FontWeight="Bold" Foreground="#0F172A"/>
                    <TextBlock Text="Manage Customers &amp; Suppliers quickly" FontSize="12" Foreground="#64748B" Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" MinWidth="200" MaxWidth="500">
                    <Button Content="Import" Padding="12,6" MinWidth="80" Margin="0,0,6,0"/>
                    <Button Content="Export" Padding="12,6" MinWidth="80" Margin="0,0,6,0"/>
                    <Button Content="+ Add Party" Background="#4C6FFF" Foreground="White" Padding="12,6" MinWidth="100"/>
                </StackPanel>
            </Grid>

            <!-- METRICS + TOGGLE + SEARCH -->
            <StackPanel Grid.Row="1" Margin="0,18,0,10">

                <!-- TOGGLE -->
                <StackPanel Orientation="Horizontal" Spacing="0" HorizontalAlignment="Left" Margin="0,0,0,12">
                    <Button x:Name="CustomerToggle" Content="Customer" Click="CustomerToggle_Click" Background="#4C6FFF" Foreground="White" MinWidth="80" Margin="0,0,6,0"/>
                    <Button x:Name="SupplierToggle" Content="Supplier" Click="SupplierToggle_Click" MinWidth="80"/>
                </StackPanel>

                <!-- METRICS ROW -->
                <WrapPanel HorizontalAlignment="Left">
                    <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="Total Parties" Foreground="#334155"/>
                            <TextBlock Text="1,248" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="+18 today" FontSize="11" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="Active" Foreground="#334155"/>
                            <TextBlock Text="1,100" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="+12 today" FontSize="11" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="Inactive" Foreground="#334155"/>
                            <TextBlock Text="148" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="—" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- SEARCH & FILTER ROW -->
                <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBox Width="260" MinWidth="160" PlaceholderText="Search by name, phone or email…" Margin="0,0,6,6"/>
                    <ComboBox Width="120" MinWidth="80" Margin="0,0,6,6">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                    </ComboBox>
                    <ComboBox Width="120" MinWidth="80" Margin="0,0,6,6">
                        <ComboBoxItem Content="Newest"/>
                        <ComboBoxItem Content="Oldest"/>
                    </ComboBox>
                    <Button Content="Reset" MinWidth="64" Margin="0,0,6,6"/>
                </WrapPanel>

            </StackPanel>

            <!-- MAIN CONTENT GRID -->
            <Grid x:Name="MainGrid" Grid.Row="2" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn" Width="3*"/>
                    <ColumnDefinition x:Name="RightColumn" Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT TABLE -->
                <Border x:Name="LeftPanel" CornerRadius="12" Background="White" Padding="12" MinWidth="300">
                    <!-- Table content remains the same -->
                    <StackPanel>
                        <!-- Table Header -->
                        <Grid Margin="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Party Name" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="1" Text="Phone" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="2" Text="Email" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="3" Text="Total Purchases" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="4" Text="Status / Actions" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Scrollable List -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="420">
                            <ItemsControl x:Name="PartiesItemsControl" Margin="0,8,0,12">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:Party">
                                        <Border CornerRadius="10" Padding="12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,6">
                                            <Grid ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="44"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Ellipse Width="44" Height="44" Fill="#DDEEFF"/>
                                                    <TextBlock Text="{x:Bind Initial}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                        <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{x:Bind Location}" Foreground="#64748B" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Grid>

                                                <TextBlock Grid.Column="1" Text="{x:Bind Phone}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="2" Text="{x:Bind Email}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="3" Text="{x:Bind TotalPurchase}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                                                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                                                    <Border Background="{x:Bind StockStatusColor}" CornerRadius="6" Padding="4" Margin="0,0,6,0">
                                                        <TextBlock Text="{x:Bind StockStatus}" Foreground="White" FontSize="12"/>
                                                    </Border>
                                                    <Button Content="Edit" Width="60" Margin="0,0,6,0"/>
                                                    <Button Content="Delete" Width="60"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- RIGHT PANEL -->
                <Border x:Name="RightPanel" Grid.Column="1" CornerRadius="12" Padding="12" Background="White" MinWidth="260" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,12,0,0">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Quick Actions" FontWeight="SemiBold"/>
                        <Button Content="Create Invoice" Background="#4C6FFF" Foreground="White"/>
                        <Button Content="Send Reminder"/>
                        <Button Content="Export CSV"/>

                        <Rectangle Height="1" Fill="#D0D0D0"/>

                        <TextBlock Text="Filters" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="All" Width="72"/>
                            <Button Content="Active" Width="72"/>
                            <Button Content="Inactive" Width="72"/>
                        </StackPanel>

                        <TextBlock Text="Party Preview" FontWeight="SemiBold" Margin="0,6,0,0"/>
                        <StackPanel Background="#F0F0F0" Padding="8" CornerRadius="8">
                            <TextBlock Text="Select a party to preview details" Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- VISUAL STATE MANAGER FOR RESPONSIVENESS -->
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState x:Name="NarrowState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <!-- Stack RightPanel below LeftPanel -->
                            <Setter Target="MainGrid.ColumnDefinitions[0].Width" Value="*"/>
                            <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="0"/>
                            <Setter Target="RightPanel.(Grid.Row)" Value="3"/>
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="WideState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="720"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="MainGrid.ColumnDefinitions[0].Width" Value="3*"/>
                            <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="2*"/>
                            <Setter Target="RightPanel.(Grid.Row)" Value="0"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

        </Grid>
    </ScrollViewer>
</Page>
