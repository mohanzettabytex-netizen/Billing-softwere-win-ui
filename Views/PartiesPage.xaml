<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App_3.Views.PartiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:App_3.Models"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Background="#F5F7FA">

    <Grid Padding="16">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- HEADER -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Parties" FontSize="28" FontWeight="Bold" Foreground="#0F172A"/>
                        <TextBlock Text="Manage Customers &amp; Suppliers quickly" FontSize="13" Foreground="#64748B" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Spacing="8">
                        <Button Content="+ Add Customer" Background="#4C6FFF" Foreground="White" Padding="12,6" MinWidth="120" CornerRadius="8" Click="OpenCustomerPopup_Click"/>
                        <Button Content="+ Add Supplier" Background="#0B6EFF" Foreground="White" Padding="12,6" MinWidth="120" CornerRadius="8" Click="OpenSupplierPopup_Click"/>
                        <!-- EXPORT -->
                        <Button Content="Export CSV" Background="#10B981" Foreground="White" Padding="12,6" MinWidth="100" CornerRadius="8"/>
                    </StackPanel>
                </Grid>

                <!-- TOGGLE -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button x:Name="CustomerToggle" Content="Customer" Background="#4C6FFF" Foreground="White" MinWidth="80" CornerRadius="8" Padding="8,4" Click="CustomerToggle_Click"/>
                    <Button x:Name="SupplierToggle" Content="Supplier" MinWidth="80" CornerRadius="8" Padding="8,4" Click="SupplierToggle_Click"/>
                </StackPanel>

                <!-- METRICS ROW -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="12" Margin="0,0,0,10">
                    <Border CornerRadius="12" Background="White" Padding="12" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Total Parties" Foreground="#334155"/>
                            <TextBlock x:Name="TotalPartiesText" Text="1,248" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="+18 today" FontSize="11" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12" Background="White" Padding="12" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Active" Foreground="#334155"/>
                            <TextBlock x:Name="ActiveText" Text="1,100" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="+12 today" FontSize="11" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12" Background="White" Padding="12" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Inactive" Foreground="#334155"/>
                            <TextBlock x:Name="InactiveText" Text="148" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="—" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">

                    <!-- Search Box -->
                    <Grid Width="260" Margin="0,0,8,8">
                        <TextBox x:Name="SearchBox" PlaceholderText="Search by name, phone or email…" Padding="36,6,10,6" CornerRadius="6"/>
                        <SymbolIcon Symbol="Find" Foreground="#64748B" Width="16" Height="16" Margin="12,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Status Filter -->
                    <ComboBox x:Name="StatusFilter" Width="120" MinWidth="80" Margin="0,0,8,8">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                    </ComboBox>

                    <!-- Sort Filter -->
                    <ComboBox Width="120" MinWidth="80" Margin="0,0,8,8">
                        <ComboBoxItem Content="Newest" IsSelected="True"/>
                        <ComboBoxItem Content="Oldest"/>
                    </ComboBox>

                    <!-- Reset Button -->
                    <Button Content="Reset" MinWidth="64" CornerRadius="8" Margin="0,0,8,8"/>
                </controls:WrapPanel>


                <!-- MAIN CONTENT -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT TABLE -->
                    <Border CornerRadius="12" Background="White" Padding="12" MinWidth="300">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Customer Name" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Phone" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Email" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="Total Purchase" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="4" Text="Status / Actions" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                            </Grid>

                            <!-- Scrollable List -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350">
                                <ItemsControl x:Name="PartiesItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:Party">
                                            <Border CornerRadius="6" Padding="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,4">
                                                <Grid ColumnSpacing="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="120"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Optional Profile Image -->
                                                    <!--<Image Source="{x:Bind ProfileImage}" Width="32" Height="32" Grid.Column="0"/>-->

                                                    <TextBlock Grid.Column="0" Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="{x:Bind Phone}" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="{x:Bind Email}" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="{x:Bind TotalPurchase}" VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                                                        <Border Background="{x:Bind StockStatusColor}" CornerRadius="4" Padding="2,0">
                                                            <TextBlock Text="{x:Bind StockStatus}" Foreground="White" FontSize="12"/>
                                                        </Border>
                                                        <Button Content="Edit" Width="50" CornerRadius="4" Padding="4,2"/>
                                                        <Button Content="Delete" Width="50" Background="#EF4444" Foreground="White" CornerRadius="4" Padding="4,2"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- PAGINATION PLACEHOLDER -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" Margin="0,8,0,0">
                                <Button Content="« Prev" Width="80" CornerRadius="6"/>
                                <TextBlock Text="Page 1 of 10" VerticalAlignment="Center"/>
                                <Button Content="Next »" Width="80" CornerRadius="6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- RIGHT PANEL -->
                    <Border Grid.Column="1" CornerRadius="12" Padding="12" Background="White" MinHeight="200">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontWeight="SemiBold"/>
                            <Button Content="Create Invoice" Background="#4C6FFF" Foreground="White" CornerRadius="8" Margin="0,4"/>
                            <Button Content="Send Reminder" CornerRadius="8" Margin="0,4"/>
                            <Button Content="Export CSV" CornerRadius="8" Margin="0,4"/>
                            <TextBlock Text="Filters" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="All" Width="72" CornerRadius="8"/>
                                <Button Content="Active" Width="72" CornerRadius="8"/>
                                <Button Content="Inactive" Width="72" CornerRadius="8"/>
                            </StackPanel>
                            <TextBlock Text="Party Preview" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <StackPanel Background="#F0F0F0" Padding="8" CornerRadius="8">
                                <TextBlock Text="Select a party to preview details" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <!-- ================= ADD PARTY POPUP ================= -->
        <Grid x:Name="AddPartyOverlay"
      Background="#66000000"
      Visibility="Collapsed"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      IsHitTestVisible="True">

            <Border Width="520"
            MaxHeight="700"
            Background="White"
            CornerRadius="12"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12">

                        <!-- HEADER -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="PopupTitle"
                               Text="Add Party"
                               FontSize="22"
                               FontWeight="SemiBold"/>

                            <Button Content="✕"
                            Grid.Column="1"
                            Width="34"
                            Height="34"
                            CornerRadius="6"
                            Click="CloseAddParty_Click"/>
                        </Grid>

                        <!-- BASIC DETAILS -->
                        <TextBlock Text="Basic Details"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,8,0,4"/>

                        <StackPanel Spacing="8">
                            <StackPanel>
                                <TextBlock Text="Name *" Foreground="Red" FontSize="12"/>
                                <TextBox x:Name="PartyNameBox"
                                 PlaceholderText="Enter name"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Phone" FontSize="12"/>
                                <TextBox x:Name="PhoneBox"
                                 PlaceholderText="Phone (Optional)"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Email" FontSize="12"/>
                                <TextBox x:Name="EmailBox"
                                 PlaceholderText="Email (Optional)"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Billing Address *" Foreground="Red" FontSize="12"/>
                                <TextBox x:Name="BillingAddressBox"
                                 PlaceholderText="Enter billing address"
                                 AcceptsReturn="True"
                                 Height="90"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <TextBox x:Name="GSTBox"
                             PlaceholderText="GST Number (Optional)"
                             CornerRadius="6"/>

                            <TextBox x:Name="OpeningBalanceBox"
                             PlaceholderText="Opening Balance (Optional)"
                             CornerRadius="6"/>
                        </StackPanel>

                        <!-- BANK DETAILS (Supplier) -->
                        <StackPanel x:Name="BankSection"
                            Spacing="8"
                            Margin="0,8,0,0"
                            Visibility="Collapsed">

                            <TextBlock Text="Bank Details (Supplier)"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,4"/>

                            <StackPanel>
                                <TextBlock Text="Bank Name *" Foreground="Red" FontSize="12"/>
                                <TextBox x:Name="BankNameBox"
                                 PlaceholderText="Enter bank name"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Account Number *" Foreground="Red" FontSize="12"/>
                                <TextBox x:Name="AccountNumberBox"
                                 PlaceholderText="Enter account number"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="IFSC Code *" Foreground="Red" FontSize="12"/>
                                <TextBox x:Name="IFSCBox"
                                 PlaceholderText="Enter IFSC code"
                                 CornerRadius="6"/>
                            </StackPanel>

                            <TextBox x:Name="UPIBox"
                             PlaceholderText="UPI ID (Optional)"
                             CornerRadius="6"/>

                            <TextBox x:Name="BranchBox"
                             PlaceholderText="Branch (Optional)"
                             CornerRadius="6"/>
                        </StackPanel>

                        <!-- ACTION BUTTONS -->
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8"
                            Margin="0,12,0,0">

                            <Button Content="Cancel"
                            CornerRadius="8"
                            Padding="12,6"
                            Click="CloseAddParty_Click"/>

                            <Button Content="Save"
                            Background="#4C6FFF"
                            Foreground="White"
                            CornerRadius="8"
                            Padding="12,6"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
